import express, { Request, Response } from 'express';

// Create Express app
const app = express();
const port = 3000;

// Define route handlers
app.get('/', (req: Request, res: Response) => {
  res.send('hello hokify');
});

// Start the Express server
app.listen(port, () => {
  console.log(`Server is running on port ${port}`);
});
